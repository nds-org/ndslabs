{
    "depends": [
        {
            "key": "logstash",
            "required": true
        }
    ],
    "key": "logspout",
    "isStack": false,
    "isService": false,
    "requiresVolume": true,
    "label": "LogSpout",
    "image": "ndslabs/logspout:latest",
    "config":  {
       "LABEL": "io.kubernetes.pod.name:^$(NAMESPACE)/.*"
    },
    "command": [ "bin/logspout" ],
    "args": [ "syslog+tcp://$(LOGSTASH_PORT_5000_TCP_ADDR):$(LOGSTASH_PORT_5000_TCP_PORT)" ],
    "volumeMounts":[
        { "mountPath": "/tmp/docker.sock", "name": "docker" }
    ]
}
